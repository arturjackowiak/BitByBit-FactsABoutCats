{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": {
      "Components/*": ["./src/components/*"],
      "Styles/*": ["./src/styles/*"],
      "Hooks/*": ["./src/hooks/*"],
      "Context/*": ["./src/context/*"],
      "Pages/*": ["./src/pages/*"],
      "Types/*": ["./src/types/*"],
      "Enums/*": ["./src/enums/*"],
      "Layouts/*": ["./src/layouts/*"],
      "Schemas/*": ["./src/schemas/*"],
      "Helpers/*": ["./src/helpers/*"]
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
